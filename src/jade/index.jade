extend includes/_layout
block title
	title Home DY
block body
	//begin one
	.one.js-one
		.section.one__slide
			.entry
				svg.entry__svg
					// Symbol with text
					symbol#s-text.entry__symbol.js-svg-symbol
						text.entry__text(text-anchor='middle', x='50%', y='40%' dy='0')
							| С нами вы познаете
						text.entry__text(text-anchor='middle', x='50%', y='50%' dy='0')
							| дзен поисковой
						text.entry__text(text-anchor='middle', x='50%', y='60%' dy='0')
							| оптимизации
					// Mask with text
					mask#m-text(maskunits='userSpaceOnUse', maskcontentunits='userSpaceOnUse')
						rect.entry__mask-shape(width='100%', height='100%')
						use.entry__mask-text(xmlns:xlink='http://www.w3.org/1999/xlink', xlink:href='#s-text')
				.entry__box
					// Container for video
					.entry__text-fill.js-svg-fill
						video.entry__video.js-video(autoplay='autoplay', loop, muted, controls='false')
							source(src='http://www.w3schools.com/html/mov_bbb.mp4' type='video/mp4')
					// Visible SVG
					svg.entry__inverted-mask.js-svg-mask
						rect.entry__shape-fill(width='100%', height='100%', mask='url(#m-text)')
						use.entry__text-transparent(xmlns:xlink='http://www.w3.org/1999/xlink', xlink:href='#s-text')
		.section.one__slide
			| lol
		.section.one__slide
			| lol
		.section.one__slide
			| lol
	//end one